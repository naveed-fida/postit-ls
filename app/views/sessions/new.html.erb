<%= render 'shared/content_title', title: 'Please Enter your email and password' %>

<%= form_for '/login'  do %>
  <div class="control-group">
    <%= label_tag 'username'%>
    <%= text_field_tag 'username' %>
  </div>

  <div class="control-group">
    <%= label_tag 'password' %>
    <%= password_field_tag 'password' %>
  </div>

  <%= submit_tag 'Log In', class: 'btn btn-success' %>
<% end %>